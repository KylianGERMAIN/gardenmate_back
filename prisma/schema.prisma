generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum SunlightLevel {
  FULL_SUN
  PARTIAL_SHADE
  SHADE
}
model Plant {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  sunlightLevel SunlightLevel

  @@map("plants")
  userPlants UserPlant[]
}


enum UserRole {
  ADMIN
  USER
}

model User {
  id            Int      @id @default(autoincrement())
  login         String   @unique
  password      String
  role          UserRole
  userPlants UserPlant[]

  @@map("users")
}

model UserPlant {
  id               Int          @id @default(autoincrement())
  user             User         @relation(fields: [userId], references: [id])
  userId           Int
  plant            Plant        @relation(fields: [plantId], references: [id])
  plantId          Int
  plantedAt        DateTime?
  lastWateredAt    DateTime?
}