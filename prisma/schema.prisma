generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum SunlightLevel {
  FULL_SUN
  PARTIAL_SHADE
  SHADE
}
model Plant {
  uid           String   @id @default(uuid())
  name          String   @unique
  sunlightLevel SunlightLevel
  userPlants UserPlant[]

  @@map("plants")
}


enum UserRole {
  ADMIN
  USER
}

model User {
  uid       String   @id @default(uuid())
  login     String   @unique
  password  String
  role      UserRole
  userPlants UserPlant[]

  @@map("users")
}

model UserPlant {
  uid            String   @id @default(uuid())
  user           User     @relation(fields: [userUid], references: [uid])
  userUid        String
  plant          Plant    @relation(fields: [plantUid], references: [uid])
  plantUid       String
  plantedAt      DateTime?
  lastWateredAt  DateTime?

  @@map("user_plants")
}